@using CLS_SLE.Models;

@model IEnumerable<CLS_SLE.Models.School>

@{
    ViewBag.Title = "List Schools";
}



@{
    ViewBag.Title = "List Schools";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">@Html.ActionLink("Admin Dashboard", "AdminDashboard")</li>
        <li class="breadcrumb-item active" aria-current="page">List Schools</li>
    </ol>
</nav>
<h2>Schools</h2>

<p>
    @Html.ActionLink("Edit School", "EditSchool")  &nbsp; &nbsp; |&nbsp; &nbsp;
    @Html.ActionLink("Add New School", "AddSchool")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedDateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreatedByLoginID)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModifiedDateTime)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModifiedByLoginID)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedByLoginID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifiedDateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifiedByLoginID)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.SchoolID }) |
                @Html.ActionLink("Details", "Details", new { id = item.SchoolID }) @*|
                    @Html.ActionLink("Delete", "Delete", new { id = item.SchoolID })*@
            </td>
        </tr>
    }

</table>
