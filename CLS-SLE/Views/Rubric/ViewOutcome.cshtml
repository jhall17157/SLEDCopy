<table class="table table-hover">

    <thead class="thead-dark">
        <tr>
            <th scope="col" class="h3">Criteria</th>            
            <th class="text-right"><a href="/Rubric/AddCriterion?outcomeID=@Model.Outcome.OutcomeID"><button type="button" class="btn btn-primary">Add New</button></a></th>

        </tr>
    </thead>
    <tbody>

        @foreach (Criterion criterion in Model.Criteria)
        {
            <tr>

                <td>@criterion.Name</td>
                <td class="text-right">
                    <a href="ViewCriterion?criterionID=@criterion.CriteriaID"><button type="button" class="btn btn-primary">View</button></a>
                </td>

            </tr>
        }

    </tbody>
</table>

