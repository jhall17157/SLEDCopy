@model CLS_SLE.ViewModels.SchoolUpdateViewModel
@{
    ViewBag.Title = "Edit";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">@Html.ActionLink("Admin Dashboard", "AdminDashboard", "Admin")</li>
        <li class="breadcrumb-item">@Html.ActionLink("Manage Schools", "ViewSchools", "Admin")</li>
        <li class="breadcrumb-item active" aria-current="page">Edit School - @ViewBag.SchoolName</li>
    </ol>
</nav>
<h1>Edit User - @ViewBag.SchoolName</h1>
<br />

@using (Html.BeginForm("UpdateSchool", "AdminSchool", new { id = ViewBag.Id }, FormMethod.Post))
{
    <!--<input type="hidden" name="id" id="id" value="@ViewBag.Id" />-->
    <div class="form-group">
        @Html.Label("School Name:")
        @Html.EditorFor(Model => Model.School.Name,
        new {htmlAttributes = new { @class = "form-control", @Value = ViewBag.SchoolName} })
        @Html.ValidationMessageFor(Model => Model.School.Name)
    </div>
    <div class="form-group">
        <input type="submit" class="btn-block btn-primary" value="Submit" />
    </div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}