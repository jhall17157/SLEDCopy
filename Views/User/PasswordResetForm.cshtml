@using CLS_SLE.Models;
@model CLS_SLE.Models.PasswordResetEdit
@{
    ViewBag.Title = "PasswordResetForm";
}

<div class="font-md"><h2>Choose Your New Password</h2></div>
<div class="well">
    <form class="form-horizontal" method="post">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <!-- Login -->
        <div class="form-group">
            <h3>@Html.LabelFor(model => model.Login, htmlAttributes: new { @class = "control-label col-md-2" })</h3>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control", placeholder = "Login" } })
                @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" })
            </div>
        </div>
        <!-- Unique Code -->
        <div class="form-group">
            <h3>@Html.LabelFor(model => model.PWResetKey, htmlAttributes: new { @class = "control-label col-md-2" })</h3>
            <div class="col-md-10">
                @Html.EditorFor(model => model.PWResetKey, new { htmlAttributes = new { @class = "form-control", placeholder = "Unique Code" } })
                @Html.ValidationMessageFor(model => model.PWResetKey, "", new { @class = "text-danger" })
            </div>
        </div>
        <!-- New Password -->
        <div class="form-group">
            <h3>@Html.LabelFor(model => model.Hash, htmlAttributes: new { @class = "control-label col-md-2" })</h3>
            <div class="col-md-10">
                @Html.PasswordFor(model => model.Hash, new { @class = "form-control", placeholder = "New Password" })
                @Html.ValidationMessageFor(model => model.Hash, "", new { @class = "text-danger" })
            </div>
        </div>
        <!-- Confirm New Password -->
        <div class="form-group">
            <h3>@Html.LabelFor(model => model.SecondHash, htmlAttributes: new { @class = "control-label col-md-2" })</h3>
            <div class="col-md-10">
                @Html.PasswordFor(model => model.SecondHash, new { @class = "form-control", placeholder = "Confirm Password" })
                @Html.ValidationMessageFor(model => model.SecondHash, "", new { @class = "text-danger" })
            </div>
        </div>
        <!-- Submit -->
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-outline-dark">Submit</button>
            </div>
        </div>
    </form>
</div>