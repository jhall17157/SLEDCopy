@using CLS_SLE.Models;
@model CLS_SLE.Models.PasswordReset
@{
    ViewBag.Title = "PasswordReset";
}

<div class="font-md"><h2>Password Reset</h2></div>
<div class="well">
    <form class="form-horizontal" method="post">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                <h3>Login</h3>
                @Html.EditorFor(model => model.Login, new { htmlAttributes = new { @class = "form-control", placeholder = "Enter Login" } })
                @Html.ValidationMessageFor(model => model.Login, "", new { @class = "text-danger" } )
            </div>
        </div>

        <!-- Submit button -->
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-outline-dark">Reset Password</button>
            </div>
        </div>
    </form>
</div>
