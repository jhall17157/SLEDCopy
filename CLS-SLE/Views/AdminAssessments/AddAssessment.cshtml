@using CLS_SLE.Models;

@{
    ViewBag.Title = "AddAssessment";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">@Html.ActionLink("Admin Dashboard", "AdminDashboard", "Admin")</li>
        <li class="breadcrumb-item">@Html.ActionLink("Assessments", "Assessments", "AdminAssessments")</li>
        <li class="breadcrumb-item active" aria-current="page">New Assessment</li>
    </ol>
</nav>
<h1>Add Assessment</h1>
<br />

<form method="post" action="/AdminAssessments/InsertNewAssessment">
    <div class="form-row">
        <div class="form-group col-9">
            <label for="Name">Name:</label>
            <input type="text" name="Name" class="form-control" required />
            @*<input type="hidden" name="Category" id="Category" value="@Model.Category" />*@
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-9">
            <label for="Category">Category: </label>
            <select class="form-control" id="Category" name="Category">
                <option>Select a Category</option>
                @{
                    foreach (AssessmentCategory ac in Model.AssessmentCategories)
                    {
                        <option>@ac.Name</option>
                    }
                }
            </select>

        </div>
    </div>

    @*add another category*@
    @*<button name="add">Add Category</button>
        <div id="addItem">
        </div>*@

    <div class="form-row">
        <div class="form-group col-9">
            <label for="Description">Description:</label>
            <textarea name="Description" class="form-control" rows="6"></textarea>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-9">
            <label for="PassPercent">Pass Percentage:</label>
            <input type="text" name="PassPercent" class="form-control" required />
        </div>
    </div>
    <fieldset class="form-group col-9">
        <div class="row">
            <legend class="col-form-label col-4 pt-0">Calculate Outcome Pass Rate:</legend>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="CalculateOutcomePassRate" id="CalculateOutcomePassRateTrue" value="True" checked>
                <label class="form-check-label" for="CalculateOutcomePassRateTrue">True</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="CalculateOutcomePassRate" id="CalculateOutcomePassRateFalse" value="False">
                <label class="form-check-label" for="CalculateOutcomePassRateFalse">False</label>
            </div>
        </div>
    </fieldset>
    <div class="form-row">
        <div class="form-group col-9">
            <label for="Program">Program</label>
            <select class="form-control" id="Program" name="Program">
                <option>Select a Program</option>
                @{
                    foreach (Program p in Model.Programs)
                    {
                        <option>@p.Name</option>
                    }
                }
            </select>
        </div>
    </div>
    <fieldset class="form-group col-9">
        <div class="row">
            <legend class="col-form-label col-4 pt-0">Is Active:</legend>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="IsActive" id="IsActiveTrue" value="True" checked>
                <label class="form-check-label" for="IsActiveTrue">True</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="IsActive" id="IsActiveFalse" value="False">
                <label class="form-check-label" for="IsActiveFalse">False</label>
            </div>
        </div>
    </fieldset>
    <div class="row justify-content-end col-9">
        <div class="col-2 p-0 mx-1"><button class="btn btn-primary mx-1 col-12" type="submit" name="submit" formmethod="post">Submit</button></div>
        <div class="col-2 p-0 mx-1"><a href="/AdminAssessments/Assessments"><button type="button" class="btn btn-danger col-12 mx-1">Cancel</button></a></div>
    </div>

</form>

