@model CLS_SLE.Models.UserSignIn
@{
    ViewBag.Title = "Sign In";
}

<div class="font-md"><h1>Sign In</h1></div>
<div class="well">
    <form method="post" class="form-horizontal">
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <!-- Login -->
        <div class="form-group">
            <h3>@Html.LabelFor(model => model.Login, htmlAttributes: new { @class = "control-label col-md-2" })</h3>
            <div class="col-md-10">
                @Html.TextBoxFor(model => model.Login, new { @class = "form-control", placeholder = "Enter UserID" })
            </div>
        </div>
        <!-- Password -->
        <div class="form-group">
            <h3>@Html.LabelFor(model => model.Hash, htmlAttributes: new { @class = "control-label col-md-2" })</h3>
            <div class="col-md-10">
                @Html.PasswordFor(model => model.Hash, new { @class = "form-control", placeholder = "Enter Password" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <button type="submit" class="btn btn-outline-dark">Sign In</button>
                @Html.ValidationMessageFor(model => model.Hash, "", new { @class = "text-danger" })
                @Html.ValidationMessageFor(model => model.Hash, "", new { @class = "text-danger" })
            </div>
            <br />
            <a href="~/User/PasswordReset">Forgot password?</a>
        </div>
    </form>
</div>

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
}