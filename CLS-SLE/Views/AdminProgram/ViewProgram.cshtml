@using CLS_SLE.Models;
@{
    ViewBag.Title = "View Program";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">@Html.ActionLink("Admin Dashboard", "AdminDashboard", "Admin")</li>
        <li class="breadcrumb-item">@Html.ActionLink("Programs/Courses Dashboard", "ProgramDashboard", "Admin")</li>
        <li class="breadcrumb-item">@Html.ActionLink("Programs", "Programs", "AdminProgram")</li>
        <li class="breadcrumb-item active" aria-current="page">@Model.Name </li>
    </ol>
</nav>
@*TODO: Add the condition to display Edit function to anyone who has permission*@
<h1> @Model.Name  - <a style="font-size: 85%;" href="/AdminProgram/EditProgram?programID=@Model.ProgramID">Edit <i class="fas fa-edit"></i></a> </h1>
<br />
<div class="py-1">
    <b>Is Active:</b> @Model.IsActive
</div>
<div class="py-1">
    <b>Is Shared:</b> @Model.IsSharedProgram
</div>

<div class="py-1">
        <b>Last Modified:</b>  @Model.ModifiedDateTime
    </div>
    <div class="py-1">
        <b>By User:</b> @Model.ModifiedByLoginID
    </div>  
<div class="py-1">
        <b>Created:</b>  @Model.CreatedDateTime
    </div>
    <div class="py-1">
        <b>By User:</b> @Model.CreatedByLoginID
    </div> 
<br />
<div>
    <table class="table table-hover table-striped">
        <thead class="thead-dark">
            <b>Assessments</b>
        </thead>
        <tbody>
            @foreach (Assessment assessment in Model.Assessments)
            {
                if (assessment.IsActive.Equals(false))
                {
                    <tr>
                        <td colspan="2">@assessment.Name <span class="text-danger">(Not Active)</span></td>
                        <td class="text-right">
                            <a href="../AdminAssessments/ViewAssessment?id=@assessment.AssessmentID"><button type="button" class="btn btn-primary">View</button></a>
                        </td>
                    </tr>
                }
                else
                {
                    <tr>
                        <td colspan="2">@assessment.Name</td>
                        <td class="text-right">
                            <a href="../AdminAssessments/ViewAssessment?id=@assessment.AssessmentID"><button type="button" class="btn btn-primary">View</button></a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>