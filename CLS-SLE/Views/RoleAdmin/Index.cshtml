@using Microsoft.AspNet.Identity
@using Microsoft.AspNet.Identity.EntityFramework;
@using CLS_SLE.Models;
@model IEnumerable<Role>

<div class="bg-primary m-1 p-1 text-white"><h4>Roles</h4></div>

<div class="text-danger" asp-validation-summary="All"></div>

<table class="table table-sm table-bordered">
    <tr><th>Id</th><th>Name</th><th></th></tr>
    @if (Model.Count() == 0)
    {
        <tr><td colspan="3" class="text-center">No Roles</td></tr>
    }
    else
    {
        foreach (var UserRole in Model)
        {
            <tr>
                <td>@UserRole.RoleID</td>
                <td>@UserRole.Name</td>
                <td>
                    <form asp-action="Delete" asp-route-id="@UserRole.RoleID" method="post">
                        <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-id="@UserRole.RoleID">Edit</a>
                        <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                    </form>
                </td>
            </tr>
        }
    }
</table>

<a class="btn btn-outline-primary" asp-action="Create">Create</a>
<hr />
<a asp-controller="Admin">User Accounts</a>