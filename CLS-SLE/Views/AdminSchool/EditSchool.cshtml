@using CLS_SLE.Models
@{
    ViewBag.Title = "EditSchool";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">@Html.ActionLink("Admin Dashboard", "AdminDashboard", "Admin")</li>
        <li class="breadcrumb-item">@Html.ActionLink("Schools", "Schools", "AdminSchools")</li>
        <li class="breadcrumb-item">@Html.ActionLink((String)Model.school.Name, "ViewSchool", "AdminSchools", new { schoolID = Model.school.SchoolID }, null)</li>
        <li class="breadcrumb-item active" aria-current="page">Edit</li>
    </ol>
</nav>
<h1>Edit School</h1>
<br />

<form method="post" action="@Url.Action("SaveSchool", "AdminSchools", new { schoolID = Model.school.SchoolID })">
    <div class="form-row">
        <div class="form-group col-9">
            <label for="Name">Name:</label>
            <input type="text" name="Name" class="form-control" value="@Model.school.Name" required />
        </div>
    </div>
    <fieldset class="form-group col-9">
        <div class="row">
            <legend class="col-form-label col-4 pt-0">Is Active:</legend>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="IsActive" id="IsActiveTrue" value="True" @(Model.school.IsActive ? " checked=\"checked\"" : "")>
                <label class="form-check-label" for="IsActiveTrue">True</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="IsActive" id="IsActiveFalse" value="False" @(!Model.school.IsActive ? " checked=\"checked\"" : "")>
                <label class="form-check-label" for="IsActiveFalse">False</label>
            </div>
        </div>
    </fieldset>
    <div class="row justify-content-end col-9">
        <div class="col-2 p-0 mx-1"><button class="btn btn-primary mx-1 col-12" type="submit" name="submit" formmethod="post">Update</button></div>
        <div class="col-2 p-0 mx-1"><a href="/AdminSchools/ViewSchool?schoolID=@Model.school.SchoolID" class="btn btn-danger col-12 mx-1">Cancel</a></div>
    </div>
</form>