@using CLS_SLE.Models;
@model CLS_SLE.Models.PasswordResetEdit
@{
    ViewBag.Title = "PasswordResetForm";
}

<div class="font-md">Email Password Reset Link</div>
<div class="well">
    <form class="form-horizontal" method="post">

        @Html.HiddenFor(model => model.Login, new { Value = ViewBag.UID })

        <!-- Unique Code -->
        <div class="form-group">
            @Html.LabelFor(model => model.PWResetKey, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.PWResetKey, new { htmlAttributes = new { @class = "form-control", placeholder = "" } })
            </div>
        </div>

        <!-- Password -->
        <div class="form-group">
            @Html.LabelFor(model => model.Hash, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.PasswordFor(model => model.Hash, new { @class = "form-control", placeholder = "Confirm Hash" })

            </div>
        </div>
        <!-- Submit -->
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </form>
</div>