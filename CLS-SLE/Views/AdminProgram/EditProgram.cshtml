@using CLS_SLE.Models
@model CLS_SLE.ViewModels.UpdateProgramViewModel
@{
    ViewBag.Title = "EditProgram";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">@Html.ActionLink("Admin Dashboard", "AdminDashboard", "Admin")</li>
        <li class="breadcrumb-item">@Html.ActionLink("Programs/Courses Dashboard", "ProgramDashboard", "Admin")</li>
        <li class="breadcrumb-item">@Html.ActionLink("Programs", "Programs", "AdminProgram")</li>
        <li class="breadcrumb-item">@Html.ActionLink((String)ViewBag.program.Name, "ViewProgram", "AdminProgram", new { programID = ViewBag.program.ProgramID }, null)</li>
        <li class="breadcrumb-item active" aria-current="page">Edit</li>
    </ol>
</nav>
<h1>Edit Program</h1>
<br />
@using (Html.BeginForm("UpdateProgram", "AdminProgram", new { programID = ViewBag.program.ProgramID }, FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Program Number:")
        @Html.EditorFor(Model => Model.Program.Number,
       new { htmlAttributes = new { @class = "form-control", Value = ViewBag.program.Number } })
        @Html.ValidationMessageFor(model => model.Program.Number)
    </div>
    <div class="form-group">
        @Html.Label("Program Name:")
        @Html.EditorFor(Model => Model.Program.Name,
       new { htmlAttributes = new { @class = "form-control", Value = ViewBag.program.Name } })
        @Html.ValidationMessageFor(model => model.Program.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(Model => Model.Program.IsActive, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            Active
            @Html.RadioButtonFor(Model => Model.Program.IsActive, true)
            InActive
            @Html.RadioButtonFor(Model => Model.Program.IsActive, false)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(Model => Model.Program.IsSharedProgram, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            Shared
            @Html.RadioButtonFor(Model => Model.Program.IsSharedProgram, true)
            Not Shared
            @Html.RadioButtonFor(Model => Model.Program.IsSharedProgram, false)
        </div>
    </div>
