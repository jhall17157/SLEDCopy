@using CLS_SLE.Models;
@{
    ViewBag.Title = "Students";
}

<h2>Students</h2>

<table class="table table-hover table-responsive">
    <tbody id="students">
        @foreach(SectionEnrollment student in Model)
        {
            <tr id="@student.sectionID" class="student-row">
                <td class="hidden">@student.sectionID</td>
                <td class="hidden">@student.EnrollmentID</td>
                <td>@student.LastName, @student.FirstName</td>
                <td>@student.StudentID</td>
            </tr>
        }
    </tbody>
</table>

@section scripts
{
    <script>
        $(function () {
            $('#students').each(function () {
                
            });

            $('#students').on('click', '.student-row', function () {
                console.log(this.id);
                location.href = "/InstructorAssessments/TSAAssessment?sectionID=" + this.id;
            });
        })
    </script>    
}
