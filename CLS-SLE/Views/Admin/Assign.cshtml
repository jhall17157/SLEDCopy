@using Microsoft.AspNet.Identity
@using Microsoft.AspNet.Identity.EntityFramework;
@using CLS_SLE.Models;
@model IEnumerable<Role>

<h2>Assign roles to @ViewBag.Name</h2>

<form action="" method="post">
    <div class="form-group">
        @foreach (Role role in Model)
        {
            int personID = ViewBag.PersonID;
            SLE_TrackingEntities db = new SLE_TrackingEntities();
            if (db.UserRoles.Where(ur => ur.RoleID == role.RoleID && ur.PersonID == personID).Any())
            {
                <input type="checkbox" name="assign" value="@role.RoleID" checked="checked" />@role.Name <br />
            }
            else
            {
            <input type="checkbox" name="assign" value="@role.RoleID" />@role.Name <br />
            }
        }
    </div>
    <button type="submit" class="btn btn-outline-primary">Assign</button>
    <a href="~/Admin/UsersSecurity" class="btn btn-outline-secondary">Cancel</a>
</form>