@using CLS_SLE.Models;
@{
    ViewBag.Title = "Students";
    var a = Model.Assessment;
}

<h2>@a.AssessmentName</h2>
<h3>@a.RubricName - @a.CourseName CRN: @a.CRN</h3>

<table class="table table-hover table-responsive">
    <tbody id="students">
        @foreach(SectionEnrollment student in Model.Students)
        {
            <tr id="@student.EnrollmentID" class="student-row">
                <td id="sectionID_@student.EnrollmentID" class="hidden">@student.sectionID</td>
                <td id="enrollmentID_@student.EnrollmentID" class="hidden">@student.EnrollmentID</td>
                <td>@student.LastName, @student.FirstName</td>
                <td>@student.StudentID</td>
            </tr>
        }
    </tbody>
</table>

@section scripts
{
    <script>
        $(function ()
        {
            $('#students').on('click', '.student-row', function () {
                console.log(this.id);
                location.href = "/InstructorAssessments/CLSAssessment?sectionID=" + $('#sectionID_' + this.id).html() + "&enrollmentID=" + $('#enrollmentID_' + this.id).html();
            });
        })
    </script>    
}
