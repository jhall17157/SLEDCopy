@using CLS_SLE.Models;
@{
    ViewBag.Title = "Add Outcome";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">@Html.ActionLink("Admin Dashboard", "AdminDashboard", "Admin")</li>
        <li class="breadcrumb-item">@Html.ActionLink("Assessments", "Assessments", "Admin")</li>
        <li class="breadcrumb-item">@Html.ActionLink((String)((AssessmentRubric)Model.Rubric).RubricAssessments.FirstOrDefault().Assessment.Name, "ViewAssessment", "Admin", new { assessmentID = ((AssessmentRubric)Model.Rubric.AssessmentID }, null))</li>
        <li class="breadcrumb-item active" aria-current="page">New Outcome</li>
    </ol>
</nav>
<h1>Add Outcome</h1>
<br />

<form method="post" action="/Rubric/InsertNewOutcome">
    <div hidden>
        <input type="hidden" name="RubricID" value="@Model.Rubric.RubricID" />
    </div>
    <div class="form-row">
        <div class="form-group col-9">
            <label for="Name">Name:</label>
            <input type="text" name="Name" class="form-control" required/>
        </div>
    </div>
    <div class="form-row">
        <div class="form-group col-9">
            <label for="Description">Description:</label>
            <textarea name="Description" class="form-control" rows="6"></textarea>
        </div>
    </div>
    <fieldset class="form-group col-9">
        <div class="row">
            <legend class="col-form-label col-4 pt-0">Is Active:</legend>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="IsActive" id="IsActiveTrue" value="True" checked>
                <label class="form-check-label" for="IsActiveTrue">True</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="IsActive" id="IsActiveFalse" value="False">
                <label class="form-check-label" for="IsActiveFalse">False</label>
            </div>
        </div>
    </fieldset>
    @*<div class="form-row">
        <div class="form-group col-9">
            <label for="SortOrder">Sort Order:</label>
            <input type="text" name="SortOrder" class="form-control" />
        </div>
    </div>*@
    <div class="form-row">
        <div class="form-group col-9">
            <label for="PassPercent">Pass Percentage:</label>
            <input type="text" name="PassPercent" class="form-control" required/>
        </div>
    </div>
    <fieldset class="form-group col-9">
        <div class="row">
            <legend class="col-form-label col-4 pt-0">Calculate Criteria Pass Rate:</legend>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="CalculateCriteriaPassRate" id="CalculateCriteriaPassRateTrue" value="True" checked>
                <label class="form-check-label" for="CalculateCriteriaPassRateTrue">True</label>
            </div>
            <div class="form-check form-check-inline">
                <input class="form-check-input" type="radio" name="CalculateCriteriaPassRate" id="CalculateCriteriaPassRateFalse" value="False">
                <label class="form-check-label" for="CalculateCriteriaPassRateFalse">False</label>
            </div>
        </div>
    </fieldset>
    <div class="row justify-content-end col-9">
        <div class="col-2 p-0 mx-1"><button class="btn btn-primary mx-1 col-12" type="submit" name="submit" formmethod="post">Submit</button></div>
        <div class="col-2 p-0 mx-1"><a href="/Rubric/Index"><button type="button" class="btn btn-danger col-12 mx-1">Cancel</button></a></div>
    </div>

</form>