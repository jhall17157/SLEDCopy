@using CLS_SLE.Models;

@{
    ViewBag.Title = "Dashboard";
}

<h2>Your Dashboard</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <h2>Assessment</h2>
        </th>
        <th></th>
    </tr>

    @foreach (InstructorAssessment item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.AssessmentName)
            </td>
            <td>
                @Html.ActionLink("Details", "Details", new { id =item.RubricID } ) |
                @Html.ActionLink("Assess", "StudentList", new { rubricID = item.RubricID })
            </td>
        </tr>
    }

</table>
