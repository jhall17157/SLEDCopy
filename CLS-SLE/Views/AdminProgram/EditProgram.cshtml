                    Inactive
                </button>
            </div>
        </div>
        <div class="form-group">
            <div class="form-group mx-1">
                <button @if (Model.Program.IsSharedProgram) { <text> class="btn btn-success col-12" type="button" </text>  } else { <text> class="btn btn-outline-success col-12" type="submit" name="submit" formmethod="post" </text> }>
