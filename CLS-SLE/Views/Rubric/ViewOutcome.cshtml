@using CLS_SLE.Models;
@{
    ViewBag.Title = "View Outcome";
}
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">@Html.ActionLink("Admin Dashboard", "AdminDashboard", "Admin")</li>
        <li class="breadcrumb-item">@Html.ActionLink("Assessments", "Assessments", "Admin")</li>
        <li class="breadcrumb-item">@Html.ActionLink((String)((AssessmentRubric)Model.Outcome.AssessmentRubric).RubricAssessments.FirstOrDefault().Assessment.Name, "ViewAssessment", "Admin", new { assessmentID = ((AssessmentRubric)Model.Outcome.AssessmentRubric).AssessmentID }, null)</li>
        <li class="breadcrumb-item">@Html.ActionLink((String)Model.Outcome.AssessmentRubric.Name, "ViewRubric", "Rubric", new { rubricID = Model.Outcome.AssessmentRubric.RubricID}, null)</li>
        <li class="breadcrumb-item active" aria-current="page">@Model.Outcome.Name</li>
    </ol>
</nav>
<h1>
    @Model.Outcome.Name  - <a style="font-size: 85%;" href="/Rubric/EditOutcome?outcomeID=@Model.Outcome.OutcomeID"><b>Edit</b></a>
</h1>
<br />
<div class="py-1">
    <b>Description:</b> @Model.Outcome.Description
</div>
<div class="py-1">
    <b>Active:</b> @Model.Outcome.IsActive
</div>

<br />

