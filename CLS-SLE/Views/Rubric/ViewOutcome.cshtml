<table class="table table-hover">

    <thead class="thead-dark">
        <tr>
            <th class="col-3 h3">Criteria</th>
            <th class="col-7">Description</th>
            <th class="col-2 text-right"><a href="/Rubric/AddCriterion"><button type="button" class="btn btn-primary">Add New</button></a></th>

        </tr>
    </thead>
    <tbody>

        @foreach (Criterion criterion in Model.Criteria)
        {
            <tr>

                <td colspan="2">@criterion.Name</td>
                <td class="text-right">
                    <a href="ViewCriterion?criterionID=@criterion.CriteriaID"><button type="button" class="btn btn-primary">View</button></a>
                </td>

            </tr>
        }

    </tbody>
</table>

