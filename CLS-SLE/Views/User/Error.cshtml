@model CLS_SLE.Models.ErrorMessage
@{
    ViewBag.Title = "Error";
}

@if ((Model == null) || !Model.HasErrorMessage)
{
    <div class="font-md"><h1>Error Occured at Sign-In</h1></div>
}
else
{
    <div class="font-md"><h1>@Model.Message</h1></div>
    <iframe src="https://eis-dev.ec.wctc.edu/samlsso" hidden="hidden">

    </iframe>
}
<div class="well">
    <div><a href="@Model.LogoutURL">Return to Sign-in</a></div>
</div>
