@using CLS_SLE.Models;

@{
    ViewBag.Title = "ProgramDashboard";
}

    <style>
        .card:hover {
            background: rgba(0,0,0,0.07);
            text-decoration: none;
            color: #007bff;
            border-color: #007bff;
        }

        .card {
            padding-top: 15%;
            padding-bottom: 15%;
        }
    </style>

    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item">@Html.ActionLink("Admin Dashboard", "AdminDashboard", "Admin")</li>
            <li class="breadcrumb-item active" aria-current="page">Programs Dashboard</li>
        </ol>
    </nav>
    <div class="row">

        <div class="col-4">
            <a href="/AdminSchool/Schools" class="card">
                <div class="card-body text-center align-middle">
                    <div class="card-title"><i class="fas fa-tasks fa-6x" aria-hidden="true"></i></div>
                    <div class="card-text h3 font-weight-bold">Schools</div>
                </div>
            </a>
        </div>

        <div class="col-4">
            <a href="/AdminDepartment/Departments" class="card">
                <div class="card-body text-center align-middle">
                    <div class="card-title"><i class="fas fa-tasks fa-6x" aria-hidden="true"></i></div>
                    <div class="card-text h3 font-weight-bold">Departments</div>
                </div>
            </a>
        </div>
    </div>

    <div class="row">

        <div class="col-4">
            @*<a href="~/Views/"*@
            <div class="card-body text-center align-middle">
                <div class="card-title"><i class="fas fa-tasks fa-6x" aria-hidden="true"></i></div>
                <div class="card-text h3 font-weight-bold">Programs</div>
            </div>
            @*</a>*@
        </div>

        <div class="col-4">
            <a href="/AdminCourse/Courses?page=@(1)" class="card">
            <div class="card-body text-center align-middle">
                <div class="card-title"><i class="fas fa-tasks fa-6x" aria-hidden="true"></i></div>
                <div class="card-text h3 font-weight-bold">Courses</div>
            </div>
            </a>
        </div>

    </div>

