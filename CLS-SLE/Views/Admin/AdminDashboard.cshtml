@{
    ViewBag.Title = "Admin Dashboard";
}

<style>
    .card:hover {
        background: rgba(0,0,0,0.07);
        text-decoration: none;
        color: #007bff;
        border-color: #007bff;
    }
    .card{
        padding-top:15%;
        padding-bottom:15%;
    }
    .section-link {
        color: rgb(0, 0, 106);
        text-shadow: 0 5px 1px rgba(0,0,0,0.2);
    }
</style>

<div class="row">
    <div class="col-3 mt-5">
        <a href="~/Admin/Assessments" class="card">
            <div class="card-body text-center align-middle">
                <div class="card-title"><i class="fas fa-tasks fa-9x section-link" aria-hidden="true"></i></div>
                <div class="card-text h3 font-weight-bold">Assessments</div>
            </div>
        </a>
    </div>

    <div class="col-3 mt-5">
        <a href="~/Admin/ViewUsers" class="card">
            <div class="card-body text-center">
                <div class="card-title"><i class="fas fa-users fa-9x section-link" aria-hidden="true"></i></div>
                <div class="card-text h3 font-weight-bold">Users &amp; Roles</div>
            </div>
        </a>
    </div>

    <div class="col-3 mt-5">
        <a href="~/AdminMapping/Index" class="card">
            <div class="card-body text-center">
                <div class="card-title"><i class="fas fa-sitemap fa-9x section-link"></i></div>
                <div class="card-text h3 font-weight-bold">Mapping</div>
            </div>
        </a>
    </div>

    <div class="col-3 mt-5">
        <a href="~/AdminScheduling/Index" class="card">
            <div class="card-body text-center">
                <div class="card-title"><i class="fas fa-calendar fa-9x section-link" aria-hidden="true"></i></div>
                <div class="card-text h3 font-weight-bold">Scheduling</div>
            </div>
        </a>
    </div>

</div>




