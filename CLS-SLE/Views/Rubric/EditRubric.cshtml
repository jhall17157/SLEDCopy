@{
    ViewBag.Title = "Edit Rubric";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">@Html.ActionLink("Admin Dashboard", "AdminDashboard", "Admin")</li>
        <li class="breadcrumb-item">@Html.ActionLink("Assessments", "Assessments", "AdminAssessments")</li>
        @*<li class="breadcrumb-item">@Html.ActionLink(Model.RubricAssessment.Name, "ViewAssessment", "AdminAssessments", new { assessmentID = Model.RubricAssessment.AssessmentID }, null)</li>
            <li class="breadcrumb-item">@Html.ActionLink((String)Model.Rubric.Name, "ViewRubric", "Rubric", new { rubricID = Model.Rubric.RubricID }, null)</li>*@
        <li class="breadcrumb-item active" aria-current="page">Edit</li>
    </ol>
