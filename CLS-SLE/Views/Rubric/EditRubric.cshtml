<h1>Edit Rubric</h1>
<br />

@using (Html.BeginForm("SaveRubric", "Rubric", FormMethod.Post))
{
    @Html.HiddenFor(model => model.RubricAssessment.RubricID)
    <input type="hidden" name="id" id="id" value="@ViewBag.Id" />
    <div class="form-row">
        <div class="form-group col-9">
            <label for="Name">Name:</label>
            <input type="text" name="Name" class="form-control" value="@Model.AssessmentRubric.Name" />
        </div>
    </div>
    <div class="form-group">
        @Html.Label("Rubric Name:")
        @Html.EditorFor(model => model.AssessmentRubric.Name,
        new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.Name } })
    </div>
    <div class="form-group">
        @Html.Label("Rubric Description:")
        @Html.EditorFor(model => model.AssessmentRubric.Description,
        new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.Description } })
    </div>
    <fieldset class="form-group col-9">
        <div class="row">
            <legend class="col-form-label col-2 pt-0">Is Active:</legend>
            <div class="form-check form-check-inline">
                <label class="form-check-input" id="IsActive" for="IsActiveTrue">True</label>
                @Html.RadioButtonFor(model => model.AssessmentRubric.IsActive, "True",
                new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.IsActive } }))
            </div>
            <div class="form-check form-check-inline">
                <label class="form-check-input" id="IsActiveFalse" for="IsActiveFalse">False</label>
                @Html.RadioButtonFor(model => model.AssessmentRubric.IsActive, "False",
                new { htmlAttributes = new { @class = "form-control", @Value = ViewBag.IsActive } }))
            </div>
        </div>
    </fieldset>
    <div class="row">
        <div class="form-group col-4">
            @Html.Label("Start Date:")
            @Html.TextBoxFor(model => model.RubricAssessment.StartDate,
           new { @type = "date", @value = ViewBag.StartDate })
        </div>
        <div class="form-group col-4">
            @Html.Label("End Date:")
            @Html.TextBoxFor(model => model.RubricAssessment.EndDate,
           new { @type = "date", @value = ViewBag.EndDate })
        </div>
    </div>
    <div class="row justify-content-end col-9">
        <div class="col-2 p-0 mx-1"><button class="btn btn-primary mx-1 col-12" type="submit" name="submit" formmethod="post">Update</button></div>
        <div class="col-2 p-0 mx-1"><a href="/Rubric/ViewRubric?rubricID=@Model.RubricAssessment.RubricID"><button type="button" class="btn btn-danger col-12 mx-1">Cancel</button></a></div>
    </div>

    @*<div hidden>
            <input name="assessmentID" value="@Model.AssessmentID" type="hidden" />
        </div>*@
}