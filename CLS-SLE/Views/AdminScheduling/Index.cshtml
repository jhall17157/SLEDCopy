@using System.Text
@using CLS_SLE.Models
@model CLS_SLE.ViewModels.SchedulingViewModel
@{
    ViewBag.Title = "Index";
}
@Styles.Render("~/Content/bootstrap-select")

<style>
    .card:hover {
        background: rgba(0,0,0,0.07);
        text-decoration: none;
        color: #007bff;
        border-color: #007bff;
    }

    .card-title {
        padding-bottom: 10px;
    }

    .card {
        padding-top: 15%;
        padding-bottom: 5%;
    }

    .section-link {
        color: rgb(0, 0, 106);
        text-shadow: 0 5px 1px rgba(0,0,0,0.2);
    }
</style>

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">@Html.ActionLink("Admin Dashboard", "AdminDashboard", "Admin")</li>
        <li class="breadcrumb-item active" aria-current="page">Assessment Scheduling</li>
    </ol>
</nav>

<h2>Assessment Scheduling</h2>

<div class="row">
    <div class="col-3 mt-5">
        <a href="~/AdminScheduling/TimeframeSemester" class="card">
            <div class="card-body text-center align-middle">
                <div class="card-title"><i class="fas fa-calendar-day fa-9x section-link" aria-hidden="true"></i></div>
                <div class="card-text h3 font-weight-bold">Modify<br />Submission<br />Timeframe</div>
            </div>
        </a>
    </div>

    <div class="col-3 mt-5">
        <a href="~/AdminMapping/Index" class="card">
            <div class="card-body text-center">
                <div class="card-title"><i class="fas fa-search fa-9x section-link"></i></div>
                <div class="card-text h3 font-weight-bold">Course Search</div>
            </div>
        </a>
    </div>

    <div class="col-3 mt-5">
        <a href="~/Admin/ViewUsers" class="card">
            <div class="card-body text-center">
                <div class="card-title"><i class="fas fa-book fa-9x section-link" aria-hidden="true"></i></div>
                <div class="card-text h3 font-weight-bold">Add Course<br />To Semester</div>
            </div>
        </a>
    </div>
