@using CLS_SLE.Models;
@{
    ViewBag.Title = "AssessmentScheduling";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb">
        <li class="breadcrumb-item">@Html.ActionLink("Admin Dashboard", "AdminDashboard")</li>
        <li class="breadcrumb-item active" aria-current="page">Assessments</li>
    </ol>
</nav>
<h1>Assessment Scheduling</h1>
<br />

@foreach (Program program in Model.program)
{
    <table class="table table-hover">
        <thead class="thead-dark">
        <tr>
            <th scope="col" class="h3">@program.Name</th>
        </tr>
        </thead>
        <tbody>
        @foreach (Course course in Model.course)
        {
            <tr>
                <td>
                    <span class="mt-2">@course.CourseName</span>
                    <button type="button" class="btn btn-primary right">Edit</button>
                    <span class="right mr-3 mt-2">@course.Number</span>
                </td>
            </tr>
        }
        </tbody>
    </table>
}

