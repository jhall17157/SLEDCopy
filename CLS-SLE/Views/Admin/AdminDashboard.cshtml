@{
    ViewBag.Title = "Admin Dashboard";
}

<style>
    .card:hover {
        background: rgba(0,0,0,0.07);
        text-decoration: none;
        color: #007bff;
        border-color: #007bff;
    }
    .card{
        padding-top:15%;
        padding-bottom:15%;
    }
    .section-link {
        color: rgb(0, 0, 106);
        text-shadow: 0 5px 1px rgba(0,0,0,0.2);
    }
</style>

<div class="row">
    <div class="col-3 mt-5">
        <a href="~/Admin/Assessments" class="card h-100">
            <div class="card-body text-center align-middle">
                <div class="card-title"><i class="fas fa-tasks fa-9x section-link" aria-hidden="true"></i></div>
                <div class="card-text h3 font-weight-bold text-wrap">Assessments</div>
            </div>
        </a>
    </div>

    <div class="col-3 mt-5">
        <a href="~/AdminUser/ManageUsers" class="card h-100">
            <div class="card-body text-center">
                <div class="card-title"><i class="fas fa-users fa-9x section-link" aria-hidden="true"></i></div>
                <div class="card-text h3 font-weight-bold text-wrap">Users</div>
            </div>
        </a>
    </div>

    <div class="col-3 mt-5">
        <a href="~/RoleAdmin/ManageRoles" class="card h-100">
            <div class="card-body text-center">
                <div class="card-title"><i class="fas fa-briefcase fa-9x section-link" aria-hidden="true"></i></div>
                <div class="card-text h3 font-weight-bold text-wrap">Roles</div>
            </div>
        </a>
    </div>

    <div class="col-3 mt-5">
        <a href="~/Admin/ProgramDashboard" class="card h-100">
            <div class="card-body text-center">
                <div class="card-title"><i class="fas fa-project-diagram fa-9x section-link" aria-hidden="true"></i></div>
                <div class="card-text h3 font-weight-bold  text-wrap">Programs & Courses</div>
            </div>
        </a>
    </div>


    <div class="col-3 mt-5">
        <a href="~/AdminMapping/Index" class="card h-100">
            <div class="card-body text-center">
                <div class="card-title"><i class="fas fa-sitemap fa-9x section-link"></i></div>
                <div class="card-text h3 font-weight-bold text-wrap">Mapping</div>
            </div>
        </a>
    </div>

    <div class="col-3 mt-5">
        <a href="~/AdminScheduling/Index" class="card h-100">
            <div class="card-body text-center">
                <div class="card-title"><i class="fas fa-calendar fa-9x section-link" aria-hidden="true"></i></div>
                <div class="card-text h3 font-weight-bold text-wrap">Scheduling</div>
            </div>
        </a>
    </div>
    @if (ViewBag.ReportingURL != null)
    {
        <div class="col-3 mt-5">
            <a href="@ViewBag.ReportingURL" class="card h-100">
                <div class="card-body text-center">
                    <div class="card-title"><i class="fas fa-chart-bar fa-9x section-link" aria-hidden="true"></i></div>
                    <div class="card-text h3 font-weight-bold text-wrap">Reporting</div>
                </div>
            </a>
        </div>
    }

</div>




